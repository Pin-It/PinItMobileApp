<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/comments_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:elevation="2dp"
        android:padding="14dp"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/comments_list_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="TextView" />

    <ListView
        android:id="@+id/comments_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/comments_list_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorAccent"
        android:drawableLeft="@drawable/ic_add_24dp"
        android:fontFamily="@font/amatic_sc"
        android:minHeight="0dp"
        android:text="@string/add_comment_on_pin"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />
</LinearLayout>