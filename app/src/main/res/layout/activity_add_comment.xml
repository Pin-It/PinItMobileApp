<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCommentActivity">


    <TextView
        android:id="@+id/addComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/amatic_sc"
        android:text="@string/add_comment_on_pin"
        android:textAlignment="center"
        android:textColor="#fc6262"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/comment_text_input"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:hint="Type your comment here"
        android:fontFamily="@font/amatic_sc"
        android:inputType="text" />


    <LinearLayout
        android:id="@+id/commentBttns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="390dp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/skip_comment"
            android:layout_width="150dp"
            android:layout_height="29dp"
            android:background="#E0E0E0"
            android:fontFamily="@font/amatic_sc"
            android:text="skip this"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/submit_comment"
            android:layout_width="150dp"
            android:layout_height="29dp"
            android:background="#fc6262"
            android:fontFamily="@font/amatic_sc"
            android:text="@string/submit_comment"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>



</RelativeLayout>