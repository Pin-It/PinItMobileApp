<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="trackTint">@color/colorAccent</item>
    </style>

    <style name="SwitchCompatStyleTwo">
        <item name="android:thumb">@drawable/switch_thumb_pins</item>
        <item name="trackTint">@color/pin_shape_switch</item>
    </style>
</resources>
